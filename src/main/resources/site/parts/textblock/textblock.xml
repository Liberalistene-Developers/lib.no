<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
  <display-name>Text Block with title (H2)</display-name>
  <description>
    Display Title/Text Block (H2)
  </description>
  <form>
    <input name="title" type="TextLine">
      <label i18n="mixin.title.label">Title</label>          
    </input>
    <input name="titleColor" type="ComboBox">
      <label i18n="part.titleblock.titlecolor.label">Title color</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="normal" i18n="mixin.background.standard.label">Standard (adjust to background)</option>
        <option value="light" i18n="mixin.background.white.label">White</option>
        <option value="yellow" i18n="mixin.background.white.label">Yellow</option>
        <option value="purple" i18n="mixin.background.purple.label">Purple</option>
      </config>
      <default>normal</default> 
    </input>
    <input name="text" type="HtmlArea">
      <label i18n="part.textblock.text.label">Body text</label>
    </input>
  </form>
</part>
