<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
  <display-name>Image Block</display-name>
  <description>
    Display Image Block
  </description>
  <form>
    <mixin name="titleSet" />
    <mixin name="image" />
    <mixin name="imageoverlay" />
    <mixin name="headertype" />
    <mixin name="headerposition" />
    <input name="ingress" type="HtmlArea">
      <label i18n="content_types.ingress">Ingress</label>
      <config>
        <exclude>*</exclude>
        <include>Format | Bold Italic Underline TextColor | JustifyBlock JustifyLeft JustifyCenter JustifyRight | BulletedList NumberedList Outdent Indent | SpecialChar Anchor Image Macro Link Unlink | Table</include>
      </config>
    </input>
    <input name="ingressColor" type="ComboBox">
      <label i18n="parts.ingresscolor.label">Ingress color</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="normal" i18n="mixin.background.standard.label">Standard (adjust to background)</option>
        <option value="light" i18n="mixin.background.white.label">White</option>
        <option value="yellow" i18n="mixin.background.white.label">Yellow</option>
        <option value="purple" i18n="mixin.background.purple.label">Purple</option>
      </config>
      <default>normal</default>
    </input>
    <input name="mobileSize" type="ComboBox">
      <label i18n="parts.mobilesize.label">Title size on mobile</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="full" i18n="mixin.mobilesize.full.label">Full</option>
        <option value="treequarter" i18n="mixin.mobilesize.treequarter.label">3/4</option>
        <option value="half" i18n="mixin.mobilesize.half.label">1/2</option>
        <option value="quarter" i18n="mixin.mobilesize.quarter.label">1/4</option>
      </config>
      <default>full</default>
    </input>
  </form>
</part>
