<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
  <display-name>Fancy Header</display-name>
  <description>
    Fancy Header (H1 - only use once pr page)
  </description>
  <form>
    <input name="title" type="TextLine">
      <label i18n="mixin.title.label">Title</label>          
    </input>
    <mixin name="image" />
    <input name="effect" type="ImageSelector">
      <label i18n="content_types.image.displayname.label">Effect image</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowPath>${site}/*</allowPath>
        <treeMode>false</treeMode>
        <showStatus>true</showStatus>
        <hideToggleIcon>true</hideToggleIcon>
      </config>
    </input>
  </form>
</part>
