<content-type>
  <display-name i18n="content_types.image.displayname">Image</display-name>
  <display-name-label i18n="content_types.image.displayname.label">Image</display-name-label>
  <description i18n="content_types.image.description">Select or upload a image</description> 
  <super-type>base:structured</super-type>
  <is-abstract>false</is-abstract>
  <is-final>true</is-final>
  <is-built-in>false</is-built-in>
  <allow-child-content>true</allow-child-content>
  <form>
    <mixin name="image" />
    <mixin name="tags" />
  </form>
</content-type>
