<content-type>
  <display-name i18n="content_types.person.displayname">Person</display-name>
  <display-name-label i18n="content_types.person.displayname.label">Person</display-name-label>
  <description i18n="content_types.person.description">Create a new Person</description>
  <super-type>base:structured</super-type>
  <is-abstract>false</is-abstract>
  <is-final>true</is-final>
  <is-built-in>false</is-built-in>
  <allow-child-content>true</allow-child-content>
  <form>
    <mixin name="image" />
    <mixin name="tags" />
    <input name="short-description" type="TextArea">
      <label i18n="content_types.description.short.label">Short description</label>
    </input>
    <input name="description" type="HtmlArea">
      <label i18n="content_types.description.label">Description</label>
      <default i18n="content_types.description.default">
        <p>Enter full description here</p>
      </default>
    </input>
    <input name="address" type="TextArea">
      <label i18n="content_types.address">Address</label>
    </input>
    <input name="email" type="TextLine">
      <label i18n="content_types.email">E-mail</label>
    </input>
    <input name="phone" type="TextLine">
      <label i18n="content_types.phone">Primary phone</label>
    </input>
    <mixin name="social" />
  </form>
</content-type>
