<content-type>
  <display-name i18n="cty.book.displayname">Book</display-name> 
  <display-name-label i18n="cty.book.displayname.label">Book</display-name-label>
  <description>Create a new book</description> 
  <super-type>base:structured</super-type> 
  <is-abstract>false</is-abstract> 
  <is-final>true</is-final> 
  <is-built-in>false</is-built-in>  
  <allow-child-content>true</allow-child-content> 
  <form> 
    <input name="description" type="TextArea">
      <label>Description</label>
    </input>
    <input name="buy" type="TextLine">
      <label>Buy</label>
    </input>
    <input name="tags" type="ContentSelector">
      <label>Tags</label>
      <occurrences minimum="0" maximum="0"/>
      <config>
        <allowContentType>tag</allowContentType> 
        <allowPath>${site}/tags/</allowPath> 
        <allowPath>./*</allowPath>
        <treeMode>true</treeMode>  
        <showStatus>true</showStatus>  
        <hideToggleIcon>true</hideToggleIcon> 
      </config>
    </input>
  </form>
</content-type>