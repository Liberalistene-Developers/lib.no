<content-type>
  <display-name i18n="cty.group.displayname">Group</display-name> 
  <display-name-label i18n="cty.group.displayname.label">Group</display-name-label>
  <description>Create a new Group</description> 
  <super-type>base:structured</super-type> 
  <is-abstract>false</is-abstract> 
  <is-final>true</is-final> 
  <is-built-in>false</is-built-in>  
  <allow-child-content>true</allow-child-content> 
  <form> 
    <mixin name="image" />
    <input name="short-description" type="TextArea">
      <label>Short description</label>
    </input>
    <input name="description" type="HtmlArea">
      <label>Description</label>
      <default>
        <p>Enter full description here</p>
      </default>
    </input>
    <input name="address" type="TextArea">
      <label>Address</label>
    </input>
    <mixin name="map" />
    <field-set>
      <label i18n="cty.group.board.label">Board</label>
      <items>
        <item-set name="member">
          <label i18n="cty.group.board.member.label">Member</label>
          <occurrences minimum="0" maximum="0"/>
          <items>
            <input name="role" type="TextLine">
              <label i18n="cty.group.board.role.label">Role</label>
            </input>
            <input name="peopleSelector" type="ContentSelector">
              <label i18n="cty.group.board.member.label">Member</label>
              <occurrences minimum="0" maximum="1"/>
              <config>
                <allowContentType>Person</allowContentType> 
                <allowPath>${site}/persons/</allowPath>
                <allowPath>${site}/authors/</allowPath> 
                <allowPath>./*</allowPath>
                <treeMode>true</treeMode>  
                <showStatus>true</showStatus>  
                <hideToggleIcon>false</hideToggleIcon> 
              </config>
            </input>
          </items>
        </item-set>
      </items>
    </field-set>
    <input name="email" type="TextLine">
      <label>E-mail</label>
    </input>
    <input name="phone" type="TextLine">
      <label>Primary phone</label>
    </input>
    <mixin name="social" />
    <mixin name="tags" />
  </form>
</content-type>