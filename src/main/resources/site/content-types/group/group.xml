<content-type>
  <display-name i18n="cty.group.displayname">Group</display-name> 
  <display-name-label i18n="cty.group.displayname.label">Group</display-name-label>
  <description>Create a new Group</description> 
  <super-type>base:structured</super-type> 
  <is-abstract>false</is-abstract> 
  <is-final>true</is-final> 
  <is-built-in>false</is-built-in>  
  <allow-child-content>true</allow-child-content> 
  <form> 
    <mixin name="image" />
    <mixin name="tags" />
    <input name="short-description" type="TextArea">
      <label>Short description</label>
    </input>
    <input name="description" type="HtmlArea">
      <label>Description</label>
      <default>
        <p>Enter full description here</p>
      </default>
    </input>
    <input name="address" type="TextArea">
      <label>Address</label>
    </input>
    <input name="geopoint" type="GeoPoint">
      <label>Map address</label>
    </input>
    <input name="peopleSelector" type="ContentSelector">
      <label>Board</label>
      <occurrences minimum="0" maximum="0"/>
      <config>
        <allowContentType>person</allowContentType> 
        <allowPath>${site}/people/</allowPath> 
        <allowPath>./*</allowPath>
        <treeMode>true</treeMode>  
        <showStatus>true</showStatus>  
        <hideToggleIcon>true</hideToggleIcon> 
      </config>
    </input>
    <input name="email" type="TextLine">
      <label>E-mail</label>
    </input>
    <input name="phone" type="TextLine">
      <label>Primary phone</label>
    </input>
    <mixin name="social" />
  </form>
</content-type>