<content-type>
  <display-name i18n="content_types.order.displayname">Order Event</display-name>
  <display-name-label i18n="content_types.orderevent.displayname.label">Order Event</display-name-label>
  <description i18n="content_types.orderevent.description">Create a new Order Event</description>
  <super-type>base:structured</super-type>
  <is-abstract>false</is-abstract>
  <is-final>true</is-final>
  <is-built-in>false</is-built-in>
  <allow-child-content>false</allow-child-content>
  <form>
    <input name="originator" type="TextLine">
      <label i18n="content_types.orderevent.orginator.label">System</label>
    </input>

    <input name="event" type="TextLine">
      <label i18n="content_types.orderevent.event.label">Data (External system)</label>
    </input>
    <mixin name="tags" />
  </form>
</content-type>
