<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.roworder.displayname">Row order</display-name>
  <form>
    <input name="reverseroworder" type="CheckBox">
      <label i18n="mixin.roworder.label">First row last (reverse order)</label>
      <config>
        <alignment>right</alignment> 
      </config>
    </input>
  </form>
</mixin>
