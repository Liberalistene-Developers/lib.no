<mixin>
  <display-name i18n="mixin.vipps.displayname">Vipps common data</display-name>
  <form>
    <field-set>
      <label i18n="mixin.vipps.label">Vipps</label>
      <items>
       <input  name="vippsProduction" type="CheckBox">
        <label>VIPPS Production</label>
          <default></default> (1)
          <config>
            <alignment>right</alignment> (2)
          </config>
        </input>
        <input name="vippsMerchantNumber" type="TextLine">
          <label i18n="site.vippsMerchantNumber.label">VIPPS Merchant Number</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="vippsclientid" type="TextLine">
          <label i18n="site.vippsclientid.label">VIPPS client ID</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="vippssecret" type="TextLine">
          <label i18n="site.vippssecret.label">VIPPS secret</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="vippssubscriptionkey" type="TextLine">
          <label i18n="site.vippssubscriptionkey.label">VIPPS Subscription Key</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="ordersPath" type="ContentSelector">
          <label i18n="site.ordersPath.label">Path to Orders</label>
          <occurrences minimum="0" maximum="1"/>
          <config>
            <allowContentType>base:folder</allowContentType>
            <allowPath>../*</allowPath>
            <treeMode>false</treeMode>
            <showStatus>true</showStatus>
            <hideToggleIcon>true</hideToggleIcon>
          </config>
        </input>
      </items>
    </field-set>
  </form>
</mixin>
