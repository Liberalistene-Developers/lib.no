<mixin>
  <form>
    <item-set name="social">
      <label i18n="content_types.social.label">Social</label>
      <occurrences minimum="0" maximum="0"/>
      <items>
        <input name="site" type="TextLine">
          <label i18n="content_types.social.site.label">Site/Type</label>
        </input>
        <input name="address" type="TextLine">
          <label i18n="content_types.social.address.label">ID/Address</label>
        </input>
      </items>
    </item-set>
  </form>
</mixin>
