<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.imagesize.displayname">Image overlay</display-name>
  <form>
    <input name="imageOverlay" type="ComboBox">
      <label i18n="mixin.imageoverlay.image-overlay.label">Image overlay</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="" i18n="mixin.background.none.label">None</option>
        <option value="light" i18n="mixin.background.white.label">White</option>
        <option value="black" i18n="mixin.background.black.label">Black</option>
        <option value="purple" i18n="mixin.background.purple.label">Purple</option>
      </config>
      <default></default> 
    </input>
  </form>
</mixin>

