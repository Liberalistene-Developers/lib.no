<mixin>
  <display-name i18n="mixin.displaytype.displayname">Display selector</display-name>
  <form>
    <input name="displaytype" type="RadioButton">
      <label i18n="mixin.displaytype.label">Display as</label>
      <occurrences minimum="1" maximum="1"/> 
      <config>
        <option value="list" i18n="mixin.displaytype.list.label">List</option> 
        <option value="grid" i18n="mixin.displaytype.grid.label">Grid</option>
      </config>
      <default>list</default> 
    </input>
  </form>
</mixin>
