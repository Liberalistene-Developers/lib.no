<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<layout>
  <display-name i18n="layouts.3columns.displayname">4 Columns + 1</display-name>
  <description>Top row (single column) with a row underneath with 4 columns.</description>
  <form>
    <input name="columnsLayout" type="ComboBox">
      <label i18n="mixin.columnlayout.label">Column layout</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="one-25,one-25,one-25,one-25">25% - 25% - 25% - 25%</option>
        <option value="one-20,one-20,one-20,one-20">20% - 20% - 20% - 20%</option>
      </config>
      <default>one-25,one-25,one-25,one-25</default> 
    </input>
    <mixin name="fullwidth" />
    <mixin name="borderbottom" />
    <mixin name="background" />
    <mixin name="paddingtop" />
    <mixin name="paddingbottom" />
    <mixin name="reverseroworder" />
  </form>
  <regions>
    <region name="top"/>
    <region name="left"/>
    <region name="middleleft"/>
    <region name="middleright"/>
    <region name="right"/>
  </regions>
</layout>