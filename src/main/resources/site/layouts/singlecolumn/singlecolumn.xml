<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<layout>
  <display-name i18n="layouts.singlecolumn.displayname">1 column</display-name>
  <description>Create a row with 1 column.</description>
  <form>
    <mixin name="fullwidth" />
    <mixin name="borderbottom" />
    <mixin name="background" />
    <mixin name="paddingtop" />
    <mixin name="paddingbottom" />
  </form>
  <regions>
    <region name="content"/>
  </regions>
</layout>