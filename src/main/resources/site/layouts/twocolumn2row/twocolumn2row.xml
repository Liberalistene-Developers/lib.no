<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<layout xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="layouts.twocolumn.displayname">2 column + 1</display-name>
  <form>
    <input name="columnsLayout" type="ComboBox">
      <label i18n="mixin.headercolor.label">Header color</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="one,one">50% - 50%</option>
        <option value="two-60,one-40">60% - 40%</option>
        <option value="two-66,one-33">66% - 33%</option>
        <option value="two-70,one-30">70% - 30%</option>
        <option value="four,one-20">80% - 20%</option>
        <option value="one-40,two-60">40% - 60%</option>
        <option value="one-33,two-66">33% - 66%</option>
        <option value="one-30,two-70">30% - 70%</option>
        <option value="one-20,four">20% - 80%</option>
      </config>
      <default>one,one</default> 
    </input>
    <mixin name="fullwidth" />
    <mixin name="borderbottom" />
    <mixin name="background" />
    <mixin name="paddingtop" />
    <mixin name="paddingbottom" />
    <mixin name="reverseroworder" />
  </form>
  <regions>
    <region name="top"/>
    <region name="left"/>
    <region name="right"/>
  </regions>
</layout>